% Real and Imaginary as more than the squigly mess
\newcommand{\Real}{\text{Re}}
\newcommand{\Imaginary}{\text{Im}}

% principle argument and argument set
\newcommand{\Arg}{\text{Arg}}
\renewcommand{\arg}{\text{arg}}

% Ball of radius R centered at z_0 (R=#2, z_0=#1) , i.e. B(z_0, R) = ball
\newcommand\Ball[2]{B(#1,#2)}
\WithSuffix\newcommand\Ball*[2]{B_{*}(#1,#2)}


% create Laurent series

% basic form, a_n * z ^ 
\newcommand{\LaurentSeriesBasic}{\LaurentSeries{z}{a}{n}}
% substitute variable name (to make into centered Laurent series)
\newcommand{\LaurentSeriesVar}[1]{\LaurentSeries{#1}{a}{n}}
% substitute the coefficient and index variable
\newcommand{\LaurentSeriesCoef}[2]{\LaurentSeries{z}{#1}{#2}}
% both of the above
\newcommand{\LaurentSeries}[3]{\sum_{#3=-\infty}^{\infty} {#2}_{#3} {#1}^{#3}}
% create series with index starting at #4
\newcommand{\LaurentSeriesIndexed}[4]{\sum_{#3=#4}^{\infty} {#2}_{#3} {#1}^{#3}}


% residuals

% Res(f, z)
\newcommand{\Residual}[2]{\text{Res}\left( #1; #2 \right)}


\newcommand{\CauchyFormula}{f(a) = \frac{1}{2\pi i} \int_{\gamma} \frac{f(z)}{z - a} dz }
\newcommand{\CauchyFormulaExtended}{f^{(l)}(a) = \frac{l!}{2\pi i} \int_{\gamma} \frac{f(z)}{(z - a)^{l+1}} dz }

